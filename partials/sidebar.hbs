{{!-- Sidebar right --}}
<div id="sidebar" class="col s12 m4 sidebar sidebar-sticky u-h-b-{{#is "post"}}lg{{else}}md{{/is}}">
    {{!-- 5 articles featured in page (home - author - tag) --}}
    {{#is "home" }}
        {{#get "posts" filter="featured:true" limit="5" as |featured| }}
            {{> "sidebar-post" widgetTitle="Featured Posts" widgetPosts=featured }}
        {{/get}}
    {{/is}}

    {{!-- 5 articles recents in page (post) --}}
    {{#is "post, tag, author, paged" }}
        {{#get "posts" limit="5" as |recents| }}
            {{> "sidebar-post" widgetTitle="Recent Posts" widgetPosts=recents }}
        {{/get}}
    {{/is}}

    {{!-- Tag Cloud --}}
    {{> "sidebar-tag-cloud" }}

    {{!-- Github --}}
    <div class="sidebar-items u-hide u-card-shadow" id="github-sidebar-items">
        <h3 class="sidebar-title">GitHub Repos</h3>
        <div class="widget-github" id="github-repo-container"></div>
        <div class="widget-bottom" id="widget-github-bottom" style="margin:10px 0 0 0;"></div>
    </div>

    {{!-- Twitter --}}
    <div class="sidebar-items u-hide u-card-shadow">
        <h3 class="sidebar-title">Recents Tweets</h3>
        <div class="widget-twitter"></div>
    </div>

    {{!-- facebook --}}
    <div class="sidebar-items u-hide u-card-shadow" style="min-height:500px">
        <h3 class="sidebar-title">Facebook</h3>
        <div class="widget-facebook"></div>
    </div>
</div>
