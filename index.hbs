{{!-- Add layout --}}

{{!< default}}

{{^is "paged"}}

<section id="cover" class="cover u-flex-wrap" style="min-height:100vh">
    {{!-- Image featured --}}
    {{#if @blog.cover_image}}
        <div class="u-absolute0 u-block u-bg-gradient" style="background-color:#000"></div>
        <div class="cover-background cover-lazy u-absolute0 u-bg-cover u-block" style="opacity:0.5" data-original="{{@blog.cover_image}}"></div>
    {{/if}}

    <div id="cover-wrap-content" class="cover-wrap u-flex-aling-center">
        {{!-- Blog name --}}
        <h1 id="title-home" class="cover-title animated bounceInDown">{{@blog.title}}</h1>
        <div id="home-typed" class="cover-title animated bounceInDown u-hide"><span id="home-title-typed"></span></div>
        {{!-- Blog description --}}
        <p class="cover-description animated bounceIn">{{@blog.description}}</p>
        {{!-- Btn suscribe --}}
        <!--<a id="btn-home" href="{{@blog.url}}/subscribe" class="btn-subscribe-home animated bounceIn">SUBSCRIBE NOW</a>-->
        <div id="btn-panel-home" class="btn-panel-box">
            <!-- generated button is inserted here -->
        </div>
    </div>

</section>

{{/is}}

